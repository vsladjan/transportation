<div class="modal" id="editStationModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit station</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="editStationX">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/transportation/station/edit" id="editStationForm">
            <fieldset>
              <div class="form-group">
                <label for="idEdit">Id</label>
                <input type="text" readonly class="form-control" id="idEdit" name="id" placeholder="Id">
              </div>
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="nameEdit" name="name" placeholder="Enter name">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="descriptionEdit" name="description"  placeholder="Description">
              </div>
              <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" id="locationEdit" name="location"  placeholder="Location">
              </div>
              <div class="form-group">
                <label for="cityareaSelect">City area</label>
                <select class="form-control" id="cityareaSelectEdit" name="cityareaSelect">
                </select>
              </div>
            </fieldset>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="editStationButton">Edit</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal" id="editStationClose">Close</button>
        </div>
      </div>
    </div>
  </div>